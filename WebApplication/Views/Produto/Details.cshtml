@model WebApplication.Models.Produto

@{
    ViewData["Title"] = "Detalhes";
}
<div class="text-center">
    <h4>Detalhes</h4>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Nome do Produto:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class="col-sm-2">
            Data de Entrada:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            Data de Saída:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataSaida)
        </dd>
        <dt class="col-sm-2">
            Preço:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProdutoId">Editar</a> |
    <a asp-action="Index">Voltar para lista</a>
</div>
