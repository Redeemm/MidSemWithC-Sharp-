@model WebApplication.Models.Produto

@{
    ViewData["Title"] = "Details";
}
<div class="text-center">
    <h4>Details</h4>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name of Product:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeProduto)
        </dd>
        <dt class="col-sm-2">
            Entry Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            Departure Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataSaida)
        </dd>
        <dt class="col-sm-2">
            Price:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProdutoId">Editar</a> |
    <a asp-action="Index">Back to list</a>
</div>
